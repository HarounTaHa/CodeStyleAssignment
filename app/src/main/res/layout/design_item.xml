<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم الكتاب:"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="اسم المؤلف:"
            android:textSize="20sp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="وصف الكتاب:"/>

    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            >
            <TextView
                android:id="@+id/name_book_tv"
                android:textColor="#CF800B"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name book"/>

            <TextView
                android:id="@+id/name_author_tv"
                android:layout_marginTop="19dp"
                android:textColor="#CF800B"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author Name"/>

            <TextView
                android:id="@+id/description_book_tv"
                android:layout_marginTop="23dp"
                android:textColor="#CF800B"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"/>

        </LinearLayout>



    </LinearLayout>


        <LinearLayout
        android:background="#616161"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="عدد الصفحات :"
            android:textColor="#fff"
            />
            <TextView
                android:id="@+id/number_of_pages_tv"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="num page"
                android:layout_marginStart="11dp"
                android:layout_marginTop="1dp"
                />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="سنة الاصدار :"
            android:layout_marginStart="50dp"
            />
            <TextView
                android:id="@+id/year_of_publishing_tv"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="num page"
                android:layout_marginStart="11dp"
                android:layout_marginTop="1dp"
                />

    </LinearLayout>


</LinearLayout>