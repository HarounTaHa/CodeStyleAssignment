<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/luncher"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="128dp"
        android:src="@drawable/frame_2f"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="8dp"
        android:text="تطبيق مكتبتي"
        android:textColor="#D5000000"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_book"
        android:layout_width="162dp"
        android:layout_height="95dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="108dp"
        android:text="اضافة"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/show_book"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/show_book"
        android:layout_width="167dp"
        android:layout_height="97dp"
        android:layout_marginEnd="2dp"
        android:text="عرض كتبي"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_book"
        app:layout_constraintTop_toTopOf="@+id/add_book" />

</android.support.constraint.ConstraintLayout>